# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'naver-music-for-mac' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for naver-music-for-mac

  # Rx
  pod 'RxSwift', '~> 4.0'
  pod 'RxCocoa', '~> 4.0'

  # Database
  pod 'RealmSwift'
  pod 'RxRealmDataSources'

  # Network
  pod 'Moya/RxSwift', '~> 11.0'

  # Image downloader
  pod 'Kingfisher', '~> 4.7'

  # HTML Parser
  pod 'Kanna', '~> 4.0.0'

  # UI
  pod 'SnapKit'

  # Fabric
  pod 'Fabric'
  pod 'Crashlytics'

  # Media Key
  pod 'MediaKeyTap'

  target 'naver-music-for-macTests' do
    inherit! :search_paths
    # Pods for testing
    # Rx
    pod 'RxBlocking', '~> 4.0'
    pod 'RxTest',     '~> 4.0'

    # Quick, Nimble
    pod 'Quick'
    pod 'Nimble'
  end

end
